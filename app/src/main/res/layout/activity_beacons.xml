<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/beacon_swipe_layout"
        tools:context="com.octoblu.beaconblu.BeaconsActivity">

        <ListView
            android:id="@+id/beacon_list"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        </ListView>

    </android.support.v4.widget.SwipeRefreshLayout>
    <TextView android:id="@+id/empty_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="No Beacons Discovered.\nHave you enabled any beacon types?" />

</FrameLayout>


